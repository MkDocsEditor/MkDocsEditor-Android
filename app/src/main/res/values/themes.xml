        <item name="resourceBackgroundColor">@color/resourceBackgroundColorInverse</item>

        <item name="listItem_dividerColor">@color/listItem_dividerColorLight</item>

        <!-- KodeEditor -->
        <item name="cev_editor_backgroundColor">@color/editor_backgroundLight</item>
        <item name="cev_lineNumbers_backgroundColor">@color/editor_lineNumbers_backgroundLight
        </item>
        <item name="cev_lineNumbers_textColor">@color/textColorSecondaryInverse</item>

        <!--About Libraries-->
