        <item name="about_libraries_title_description">@color/textColorPrimaryInverse</item>
        <item name="about_libraries_title_openSource">@color/textColorPrimaryInverse</item>
        <item name="about_libraries_text_openSource">@color/textColorSecondaryInverse</item>
        <item name="about_libraries_special_button_openSource">
            @color/about_libraries_special_button_openSource
        </item>
        <item name="about_libraries_dividerDark_openSource">
            @color/about_libraries_dividerDark_openSource
        </item>
        <item name="about_libraries_dividerLight_openSource">
            @color/about_libraries_dividerLight_openSource
        </item>


        <!-- MaterialDrawer specific valueDescriptions -->
        <item name="material_drawer_background">@color/material_drawer_background</item>
        <item name="material_drawer_primary_text">@color/material_drawer_primary_text</item>
        <item name="material_drawer_primary_icon">@color/material_drawer_primary_icon</item>
        <item name="material_drawer_secondary_text">@color/material_drawer_secondary_text</item>
        <item name="material_drawer_hint_text">@color/material_drawer_hint_text</item>
        <item name="material_drawer_divider">@color/material_drawer_divider</item>
        <item name="material_drawer_selected">@color/material_drawer_selected</item>
